## sudo gem install ruby bundler
## sudo apt-get install ruby-dev zlib1g-dev
## mkdir tmp-jekyll && cd tmp-jekyll
## cat <<- EOF > Gemfile
##     gem 'github-pages'
##     source 'https://rubygems.org'
## EOF
## bundle install && cd ../ && rm -rf tmp-jekyll
